<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <div class="auth-card d-flex flex-md-row flex-column">
        <!-- Left Panel -->
        <div class="col-md-6 left-panel">
            <h1>Welcome Back!</h1>
            <p>Log in or sign up to explore more.</p>
            <button class="btn btn-light mt-3">Learn More</button>
        </div>
        <!-- Form Panel -->
        <div class="col-md-6 form-panel">
            <ul class="nav nav-tabs" id="authTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login"
                        type="button" role="tab" aria-controls="login" aria-selected="true">Login</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="signup-tab" data-bs-toggle="tab" data-bs-target="#signup" type="button"
                        role="tab" aria-controls="signup" aria-selected="false">Sign Up</button>
                </li>
            </ul>

            <div class="tab-content">
                <!-- Login Form -->
                <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
                    <form action="/auth/login" method="POST">
                        <div class="mb-3">
                            <label for="loginEmail" class="form-label">Email Address</label>
                            <input type="email" name="email" class="form-control" id="loginEmail"
                                placeholder="Enter your email">
                        </div>
                        <div class="mb-3">
                            <label for="loginPassword" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" id="loginPassword"
                                placeholder="Enter your password">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-custom"
                                style="background: rgb(152, 215, 152);font-weight: 500;">Login</button>
                        </div>
                        <div class="d-grid mt-3">
                            <a href="/auth/google"><button type="button" class="btn btn-google"
                                    style="background: rgb(218, 218, 239);font-weight: 500;">
                                    <i class="fab fa-google"></i> Continue with Google
                                </button>
                            </a>
                        </div>
                    </form>
                </div>

                <!-- Sign Up Form -->
                <div class="tab-pane fade" id="signup" role="tabpanel" aria-labelledby="signup-tab">
                    <form action="/auth/signup" method="POST">
                        <div class="mb-3">
                            <label for="signupName" class="form-label">Username</label>
                            <input type="text" class="form-control" id="signupName" name="username"
                                placeholder="Enter your name">
                        </div>
                        <div class="mb-3">
                            <label for="signupEmail" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="signupEmail" name="email"
                                placeholder="Enter your email">
                        </div>
                        <div class="mb-3">
                            <label for="signupPassword" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" id="signupPassword"
                                placeholder="Create a password">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-custom"
                                style="background: rgb(152, 215, 152);font-weight: 500;">Sign Up</button>
                        </div>
                        <div class="d-grid mt-3">
                            <a href="/auth/google"> <button type="button" class="btn btn-google"
                                    style="background: rgb(218, 218, 239);font-weight: 500;">
                                    <i class="fab fa-google"></i> Continue with Google
                                </button>
                            </a>
                        </div>
                    </form>
                </div>
                <div class="mb-3 pt-2">
                    {{#if signUpError}}
                    <div id="errorAlert" class="alert alert-danger">{{signUpError}}</div>
                    {{/if}}
                    {{#if successMessage}}
                    <div id="successAlert" class="alert alert-success">{{successMessage}}</div>
                    {{/if}}
                </div>
                <div class="mb-3 pt-2">
                    {{#if loginError}}
                    <div id="errorAlert" class="alert alert-danger">{{loginError}}</div>
                    {{/if}}
                    {{#if successMessage}}
                    <div id="successAlert" class="alert alert-success">{{successMessage}}</div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Automatically hide alerts after 5 seconds
        setTimeout(() => {
            const errorAlert = document.getElementById('errorAlert');
            const successAlert = document.getElementById('successAlert');
            if (errorAlert) {
                errorAlert.style.display = 'none';
            }
            if (successAlert) {
                successAlert.style.display = 'none';
            }
        }, 5000); // 5000ms = 5 seconds
    </script>
</body>

</html>